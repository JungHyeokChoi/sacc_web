<%- include('_header.ejs') -%>
<% if (!data) { %>
<div class="row no-gutter">
  <div class="col-md-8 mx-auto">
    <div class="login d-flex align-items-center py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-9 col-lg-8 mx-auto">
            <h3 class="login-heading mb-4">Query</h3>
            <form action="/query" method="POST">
              <div class="form-group">
                <input type="text" name="key" class="form-control my-input" id="keyInput" placeholder="Input Key" autocomplete="off">
              </div>
              <div class= "mx-auto text-center">
                  <button type="submit" class="btn btn-outline-info">Query</button>
                  <a href="/"><button type="button" class="btn btn-outline-secondary">Cancel</button></a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } else { %>
<div class="row no-gutter">
  <div class="col-md-8 col-lg-6">
    <div class="login d-flex align-items-center py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-9 col-lg-8 mx-auto">
            <h3 class="login-heading mb-4">Query</h3>
            <form action="/query" method="POST">
              <div class="form-group">
                <input type="text" name="key" class="form-control my-input" id="keyInput" placeholder="Input Key" autocomplete="off">
              </div>
              <div class= "mx-auto text-center">
                  <button type="submit" class="btn btn-outline-info">Query</button>
                  <a href="/"><button type="button" class="btn btn-outline-secondary">Cancel</button></a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-lg-6">
    <div class="login d-flex align-items-center py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-9 col-lg-8 mx-auto">
            <h3 class="login-heading mb-4">Result</h3>
            <div class="form-group">
                <input type="text" name="key" class="form-control my-input" id="keyInput" placeholder="<%= data.key %>" readonly>
            </div>
            <div class="form-group">
                <input type="text" name="value" class="form-control my-input" id="keyInput" placeholder="<%= data.value %>" readonly>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>
<%- include('_footer.ejs') -%>
